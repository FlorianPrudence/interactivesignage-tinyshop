<?xml version="1.0" encoding="utf-8" ?>
<Template xmlns="https://schemas.altazion.com/sys/template.xsd">
  <Name>demo-tinyshop</Name>
  <Description>Lorem Ipsum</Description>
  <Author>Altazion</Author>
  <BasedOn>Vending</BasedOn>
  <Content root=".">
    <Variation code="Main" label="Version vanilla">
      <VariationContent kind="ProductPage">
        <Folder path="Main" />
      </VariationContent>
      <VariationContent kind="HomePage">
        <Folder path="Main" />
      </VariationContent>
      <VariationContent kind="Descente">
        <Folder path="Main" />
      </VariationContent>
      <VariationContent kind="LoadingPage">
        <Folder path="Main" />
      </VariationContent>
      <VariationContent kind="PageHeader">
        <Folder path="Main" />
      </VariationContent>
      <VariationContent kind="Panier">
        <Folder path="Main" />
      </VariationContent>
      <VariationContent kind="ProcessStep1">
        <Folder path="Main" />
      </VariationContent>
      <VariationContent kind="ProcessStep2">
        <Folder path="Main" />
      </VariationContent>
      <Settings>
        <SettingsPage kind="HomePage">
          <Group code="BackgroundImagesGroup" label="Configuration des images de fond">
            <Variable code="BackgroundImage01" kind="ImageUrl" label="Image de fond Main" defaultValue="https://clientsimplemente.blob.core.windows.net/digitalsignage-resources/bg-home.jpg"/>
            <Variable code="BackgroundImage02" kind="ImageUrl" label="Image de fond Secondaire" defaultValue="https://clientsimplemente.blob.core.windows.net/digitalsignage-resources/bg-2.jpg"/>
          </Group>
        </SettingsPage>
      </Settings>
    </Variation>
    <Variation code="Search" label="Version avec recherche au centre">
      <VariationContent kind="HomePage">
        <Folder path="Search" />
      </VariationContent>
    </Variation>
    <Shared kind="CSS">
      <Folder path="style" />
    </Shared>
    <Shared kind="JS">
      <File path="scripts/modernizr.custom.79639.js"/>
      <File path="scripts/jquery.mCustomScrollbar.concat.min.js"/>
      <File path="scripts/polyfills.js"/>
      <File path="scripts/slider.js"/>
      <File path="scripts/app.js"/>
    </Shared>
  </Content>
  
  <ApplicationBaseConfiguration>
  </ApplicationBaseConfiguration>

  <PublishSettings>
    <Variations>
      <Variation code="Main" />
    </Variations>
    
    <Settings>
      <Setting code="BackgroundImagesGroup.BackgroundImage01" value="https://clientsimplemente.blob.core.windows.net/digitalsignage-resources/bg-home.jpg" />
      <Setting code="BackgroundImagesGroup.BackgroundImage02" value="https://clientsimplemente.blob.core.windows.net/digitalsignage-resources/bg-2.jpg" />
    </Settings>  
  </PublishSettings>

</Template>
